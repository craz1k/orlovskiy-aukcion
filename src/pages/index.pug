extends common/layout

block content
  main.auc
    .auc__inner
      .auc__left
        .auc__controllers
          button.auc__clear(title="Очистить хранилище" clear): +icon("auc__icon", "reset")
          .auc__edit-wrapper
            button.auc__edit(title="Вернуться назад" auc-back): +icon("auc__icon auc__icon--revert", "arrow")
            button.auc__edit(title="Вернуться вперёд" auc-forward): +icon("auc__icon", "arrow")

        .auc__lots-wrapper
          +auc-item("auc__item--first")
          +auc-item("auc__item--second")
          +auc-item
          +auc-item
        button.auc__add-lot(add-lot title="Добавить лот"): +icon("auc__icon", "plus")
      .auc__right
        p.auc__total
          |Банк:
          |
          span(total) 0
        .auc__timer-wrapper
          .auc__timer
            button.auc__start(start)
            p.auc__time(timer)
              span(minutes) 10
              |:
              span(seconds) 00
              //- |.
              //- span(mseconds) 000
            button.auc__reset(reset) Сброс
          .auc__timer-controllers
            button.auc__timer-btn(plus-one-min) +1
            button.auc__timer-btn(plus-two-min) +2
            button.auc__timer-btn(ten-min) =10
            button.auc__timer-btn(minus-one-min) -1
